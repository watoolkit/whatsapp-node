{
  "name": "@watoolkit/whatsapp-node",
  "version": "0.1.0",
  "description": "WhatsApp Cloud API SDK for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build": "tsup",
    "prepublishOnly": "npm run test && npm run build",
    "size": "npm run build && size-limit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/watoolkit/whatsapp-node.git"
  },
  "keywords": [
    "whatsapp",
    "api",
    "sdk",
    "cloud-api",
    "messaging",
    "node"
  ],
  "author": "Happy Software <hola@happysoftware.mx> (https://happysoftware.mx)",
  "contributors": [
    "Hec Sanchez <hi@hecsanchez.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/watoolkit/whatsapp-node/issues"
  },
  "homepage": "https://github.com/watoolkit/whatsapp-node#readme",
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.mjs",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/node": "^20.17.9",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "msw": "^2.6.6",
    "size-limit": "^11.1.6",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  }
}